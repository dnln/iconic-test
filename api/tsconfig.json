{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2018"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types", "types/"]
  },
  "include": ["src/**/*", "types/**/*.ts"]
}
